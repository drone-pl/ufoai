}

tile +solid
{
4 4
0		a		a		0
ac		+a		+a		ac
ac		+a		+a		ac
0		x		x		0
}

// Tilesets --------------------------------------------------------*

tileset hall_north
{
+hallnorth_a
+hallnorth_b
}

tileset hall_south
{
+hallsouth_a
+hallsouth_b
}

tileset room_west
{
+room_w_a
+room_w_b
}

tileset room_north
{
+room_n_a
+room_n_b
}

tileset room_east
{
+room_e_a
+room_e_b
}

// Map assemblies single player ------------------------------------*

assembly standard
{
size "8 8"
grid "2 2"
fix +solid				"0 0"
fix tileset room_west	"0 2"
fix tileset room_west	"0 4"
fix +corridor_nw		"0 6"
fix +entrance			"2 0"
fix tileset hall_south	"2 2"
fix tileset hall_north	"2 4"
fix tileset room_north	"2 6"
fix tileset room_north	"4 6"
fix +solid				"6 0"
fix tileset room_east	"6 2"
fix tileset room_east	"6 4"
fix +corridor_ne		"6 6"
}

