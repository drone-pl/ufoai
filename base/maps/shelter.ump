// *********************************
// NUCLEAR SHELTER
// *********************************

// Tiletypes:
// ----------
// +: tile contains something
// a: common / generic tiles
// c: entrance
// n: main hall north
// s: main hall south
// x: outside

base shelter/shelter_

worldspawn {
	"maxlevel"		"6"
	"maxteams"		"4"
}

// Map Tiles -------------------------------------------------------*

tile +entrance
{
6 4
0		s		s		s		s		0
a		+c		+c		+c		+c		a
a		+c		+c		+c		+c		a
0		x		x		x		x		0
}

tile +hallsouth_a
{
6 4
0		n		n		n		n		0
a		+s		+s		+s		+s		a
a		+s		+s		+s		+s		a
0		c		c		c		c		0
}

tile +hallsouth_b
{
6 4
0		n		n		n		n		0
a		+s		+s		+s		+s		a
a		+s		+s		+s		+s		a
0		c		c		c		c		0
}

tile +hallnorth_a
{
6 4
0		a		a		a		a		0
a		+n		+n		+n		+n		a
a		+n		+n		+n		+n		a
0		s		s		s		s		0
}

tile +hallnorth_b
{
6 4
0		a		a		a		a		0
a		+n		+n		+n		+n		a
a		+n		+n		+n		+n		a
0		s		s		s		s		0
}

tile +room_w_a
{
4 4
0		a		a		0
x		+a		+a		ns
x		+a		+a		ns
0		a		a		0
}

tile +room_w_b
{
4 4
0		a		a		0
x		+a		+a		ns
x		+a		+a		ns
0		a		a		0
}

tile +room_n_a
{
4 4
0		x		x		0
a		+a		+a		a
a		+a		+a		a
0		n		n		0
}

tile +room_n_b
{
4 4
0		x		x		0
a		+a		+a		a
a		+a		+a		a
0		n		n		0
}

tile +room_e_a
{
4 4
0		a		a		0
ns		+a		+a		x
ns		+a		+a		x
0		a		a		0
}

tile +room_e_b
{
4 4
0		a		a		0
ns		+a		+a		x
ns		+a		+a		x
0		a		a		0
}

tile +corridor_nw
{
4 4
0		x		x		0
x		+a		+a		a
x		+a		+a		a
0		a		a		0
}

tile +corridor_ne
{
4 4
0		x		x		0
a		+a		+a		x
a		+a		+a		x
